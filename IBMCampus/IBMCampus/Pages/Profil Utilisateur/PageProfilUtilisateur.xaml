                    <Button Text="test" Clicked="Button_Clicked" BackgroundColor="DeepSkyBlue" TextColor="White"/>
                </StackLayout>
            </StackLayout>
            <!--<StackLayout>
            <Label Text="{Binding NomUtilisateur}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>-->
        </ScrollView>
    </ContentPage.Content>
</ContentPage>