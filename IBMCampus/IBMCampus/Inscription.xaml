<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IBMCampus.Inscription"
             Title="Inscription">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Start">
            <TableView Intent="Form">
                <TableRoot>
                    <TableSection Title="Informations générales">
                        <EntryCell x:Name="NomUtilisateur" Label="Nom" Placeholder="Nom" />
                        <EntryCell x:Name="PrenomUtilisateur" Label="Prénom" Placeholder="Prénom"/>
                        <EntryCell x:Name="AgeUtilisateur" Label="Age" Placeholder="20"/>
                        <EntryCell x:Name="TelephoneUtilisateur" Label="Telephone" Placeholder="0684090804"/>
                        <EntryCell x:Name="EMailUtilisateur" Label="Mail" Placeholder="Jean.dupont@mail.com"/>
                    </TableSection>
                </TableRoot>
            </TableView>
            <StackLayout VerticalOptions="End" HorizontalOptions="CenterAndExpand">
                <Button Text="Valider" Clicked="Button_Inscription" BackgroundColor="DeepSkyBlue" TextColor="White"/>
                <Button Clicked="Button_Annuler" Text="Annuler" BackgroundColor="DeepSkyBlue" TextColor="White"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>